<UserControl x:Class="Braco.Utilities.Wpf.Controls.Validator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:Braco.Utilities.Wpf;assembly=Braco.Utilities.Wpf">
	<TextBlock x:Name="lblError"
	           HorizontalAlignment="{utils:RelativeBinding HorizontalAlignment}"
	           Background="Transparent"
	           Foreground="{DynamicResource InfoBoxType_Error_Brush}"
	           TextWrapping="Wrap" Visibility="Collapsed" />
</UserControl>
