<UserControl x:Class="Braco.Utilities.Wpf.Controls.Pagination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="450"
             d:DesignWidth="800" mc:Ignorable="d">
	<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
		<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
			<StackPanel x:Name="FirstPageButtonPanel" Orientation="Horizontal">
				<Button x:Name="FirstPageButton" />

				<TextBlock Margin="5" VerticalAlignment="Bottom">.   .   .</TextBlock>
			</StackPanel>

			<StackPanel x:Name="PageButtonsHolder" Orientation="Horizontal" />

			<StackPanel x:Name="LastPageButtonPanel" Orientation="Horizontal">
				<TextBlock Margin="5" VerticalAlignment="Bottom">.   .   .</TextBlock>

				<Button x:Name="LastPageButton" />
			</StackPanel>
		</StackPanel>
	</ScrollViewer>
</UserControl>
